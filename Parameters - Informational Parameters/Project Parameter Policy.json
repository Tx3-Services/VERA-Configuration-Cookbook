            {
                "Name": "Primary Administrative Contact",
                "Description": "The email address of the primary point-of-contact for administrative support of this project."
            },
            {
                "Name": "Primary Support Contact",
                "Default Value": "help_desk@my_company.com",
                "Description": "The email address of the primary point-of-contact for technical support of this project."
            }
        ]
    }
